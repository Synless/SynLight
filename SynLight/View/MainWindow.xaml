<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="SynLight.View.MainWindow"
        xmlns:local="clr-namespace:SynLight.ViewModel"
        xmlns:conv="clr-namespace:SynLight.Converter"
        Title="{Binding SynLight.Tittle, UpdateSourceTrigger=PropertyChanged}" Height="470" Width="350" MinHeight="450" MinWidth="330"  HorizontalContentAlignment="Right" Icon="/SynLight;component/Images/SY.ico" Name="SynLightForm" BorderBrush="Black">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Window.Background>
        <ImageBrush ImageSource="/SynLight;component/Images/background.png"/>
    </Window.Background>
    <Window.Resources>
        <conv:BoolToPlayPause x:Key="BoolToPlayPause"/>
    </Window.Resources>
    <UserControl>
        <Viewbox StretchDirection="Both" Stretch="Uniform">
            <StackPanel Orientation="Vertical" Margin="12,12,12,0" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Center" >
                                <Label Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{DynamicResource x}"  />
                                <Label Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{DynamicResource y}"  />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Center" >
                                <TextBox Margin="2" VerticalAlignment="Center" TextAlignment="Center" Height="25" TextWrapping="Wrap" Width="45" Text="{Binding SynLight.Width,       UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberValidationTextBox"/>
                                <TextBox Margin="2" VerticalAlignment="Center" TextAlignment="Center" Height="25" TextWrapping="Wrap" Width="45" Text="{Binding SynLight.Height,      UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberValidationTextBox"/>
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Center">
                                <Label Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{DynamicResource corners}"  />
                                <Label Margin="2" VerticalAlignment="Center" HorizontalAlignment="Center" Content="{DynamicResource shifting}" />
                            </StackPanel>
                            <StackPanel Margin="5,5,10,5">
                                <TextBox Margin="2" VerticalAlignment="Center" TextAlignment="Center" Height="25" TextWrapping="Wrap" Width="45" Text="{Binding SynLight.Corner,      UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberValidationTextBox"/>
                                <TextBox Margin="2" VerticalAlignment="Center" TextAlignment="Center" Height="25" TextWrapping="Wrap" Width="45" Text="{Binding SynLight.Shifting,    UpdateSourceTrigger=PropertyChanged}" PreviewTextInput="NumberValidationTextBox" IsEnabled="{Binding SynLight.Ratio}" />
                            </StackPanel>
                        </StackPanel>
                        <!--<StackPanel Orientation="Vertical" Margin="5">
                            <Button Margin="3" Height="25" Content="+"  Width="25" Command="{Binding AddLongeur}" />
                            <Button Margin="3" Height="25" Content="+"  Width="25" Command="{Binding AddHauteur}" />
                            <Button Margin="3" Height="25" Content="+"  Width="25" Command="{Binding AddShifting}" IsEnabled="{Binding SynLight.Ratio}"/>
                        </StackPanel>-->
                        <!--<StackPanel Orientation="Vertical" Margin="5">
                            <Button Margin="3" Height="25" Content="-"  Width="25" Command="{Binding RemoveLongeur}" />
                            <Button Margin="3" Height="25" Content="-"  Width="25" Command="{Binding RemoveHauteur}" />
                            <Button Margin="3" Height="25" Content="-"  Width="25" Command="{Binding RemoveShifting}" IsEnabled="{Binding SynLight.Ratio}" />
                        </StackPanel>-->
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Label Margin="20,0,35,0" Content="{DynamicResource ratio}"/>
                    <RadioButton GroupName ="ratio" VerticalAlignment="Center"  Content="16/9" IsChecked="{Binding SynLight.Ratio}" />
                    <RadioButton GroupName ="ratio" VerticalAlignment="Center" Content="21/9" Margin="20,0,0,0" />
                </StackPanel>
                </StackPanel>
                <Separator Margin="12" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Label Content="{DynamicResource first}" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Vertical">
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <RadioButton Name="TL" Margin="1" GroupName="position" Content="" HorizontalAlignment="Center" IsChecked="{Binding SynLight.TopLeft}" />
                        <RadioButton Name="BL" Margin="1" GroupName="position" Content="" HorizontalAlignment="Center" IsChecked="{Binding SynLight.BotLeft}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <RadioButton Name="TR" Margin="1" GroupName="position" Content="" HorizontalAlignment="Center"  IsChecked="{Binding SynLight.TopRight}" />
                        <RadioButton Name="BR" Margin="1" GroupName="position" Content="" HorizontalAlignment="Center"  IsChecked="{Binding SynLight.BotRight}" />
                    </StackPanel>
                    <Label Margin="10,0,0,0" Content="{DynamicResource direction}" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Vertical" Margin="0,0,10,0">
                        <RadioButton Margin="1" Content="{DynamicResource clockwise}"  GroupName ="sens" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding Commandclockwise}" IsChecked="{Binding SynLight.Clockwise, UpdateSourceTrigger=PropertyChanged}" />
                        <RadioButton Margin="1" Content="{DynamicResource cclockwise}" GroupName ="sens" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding Commandclockwise}" />
                    </StackPanel>
                </StackPanel>
                <Separator Margin="12" />
                <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                    <CheckBox Margin="15,5,15,5" Content="LPFilter" IsChecked="{Binding SynLight.LPF}"   />
                    <CheckBox Margin="5,5,15,5"  Content="BGFilter" IsChecked="{Binding SynLight.BGF}"   />
                    <!--<CheckBox Margin="5,5,15,5"  Content="{DynamicResource corners}"   IsChecked="{Binding SynLight.Corner}"/>-->
                </StackPanel>
                <Button Margin="10" Width="120" HorizontalAlignment="Center" Height="70" Command="{Binding CommandPlay}" Content="{Binding SynLight.PlayPause, Converter={StaticResource BoolToPlayPause}, UpdateSourceTrigger=PropertyChanged}" FontSize="14" FontFamily="Calibri" FontStretch="ExtraExpanded" />
            </StackPanel>
        </Viewbox>
    </UserControl>
</Window>